{
  // === Appearance ===
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.tree.indent": 12,
  "workbench.editor.empty.hint": "hidden",
  "window.zoomLevel": 2,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontLigatures": true,
  // "editor.fontFamily": "'ComicShannsMono Nerd Font', 'Comic Shanns', 'Comic Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "svg.preview.transparencyGrid": false,
  "svg.preview.boundingBox": true,
  "animations.Smooth-Mode": false,
  "animations.Enabled": true,

  // === Editor ===
  "editor.formatOnSave": true,
  "editor.insertSpaces": false,
  "editor.tabSize": 2,
  "editor.accessibilitySupport": "off",

  // === Language Specific Formatters ===
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mjml]": {
    "editor.defaultFormatter": "mjmlio.vscode-mjml"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // === Git & Files ===
  "git.autofetch": true,
  "files.exclude": {
    "vendor": true
  },

  // === Terminal ===
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.defaultProfile.osx": "fish",

  // === Explorer ===
  "explorer.autoReveal": false,

  // === JavaScript/TypeScript ===
  "javascript.suggest.autoImports": false,
  "template-string-converter.addBracketsToProps": true,

  // === Diff Editor ===
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,

  // === GitHub Copilot ===
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "mcp": true
  },
  "github.copilot.advanced": {
    "mcp.enabled": true
  },
  "github.copilot.chat.completionContext.typescript.mode": "sidecar",
  "chat.mcp.discovery.enabled": true
}
